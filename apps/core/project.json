{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/core/src",
  "projectType": "application",
  "tags": ["scope:core", "target:server"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/core"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/core/package.json",
        "{workspaceRoot}/dist/apps/core/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/core/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "core:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "core:build:development"
        },
        "production": {
          "buildTarget": "core:build:production"
        }
      }
    },
    "build-hmr": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/core",
        "main": "apps/core/src/main.ts",
        "tsConfig": "apps/core/tsconfig.app.json",
        "assets": ["apps/core/src/assets"],
        "watch": false
      },
      "configurations": {
        "development": {
          "webpackConfig": "apps/core/webpack.hmr.config.js"
        }
      }
    },
    "serve-hmr": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "core:build-hmr",
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "core:build-hmr:development"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/core/Dockerfile . -t core"
    },
    "migrate-push": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/core",
        "command": "drizzle-kit push --config=drizzle.config.ts"
      }
    },
    "migrate-generate": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/core",
        "command": "drizzle-kit generate --config=drizzle.config.ts"
      }
    },
    "migrate-run": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/core",
        "command": "drizzle-kit migrate --config=drizzle.config.ts"
      }
    },
    "migrate-dev-drop": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/core",
        "command": "drizzle-kit drop --config=drizzle.config.ts"
      }
    },
    "migrate-studio": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/core",
        "command": "drizzle-kit studio --config=drizzle.config.ts"
      }
    },
    "demo-seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -r ts-node/register -r tsconfig-paths/register apps/core/src/demo-seed.ts"
      }
    }
  }
}
